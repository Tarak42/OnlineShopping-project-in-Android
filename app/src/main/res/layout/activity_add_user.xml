<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AddUserBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ii"
        android:backgroundTintMode="add">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/back"
            android:layout_marginStart="14dp"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/textView2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/back"
            android:layout_marginTop="43dp"
            android:background="@android:color/background_light"
            android:text="Owner's Name :"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/add_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp"
            android:text="Add Owner"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView13"
            android:layout_below="@+id/gender"
            android:layout_marginTop="24dp"
            android:background="@android:color/background_light"
            android:text="Address"
            android:textColor="#1e1c1c" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="25dp"
            android:background="@android:color/background_light"
            android:text="Password"
            android:textColor="#1e1c1c" />

        <EditText
            android:id="@+id/ownername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginEnd="12dp"
            android:height="40sp"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#1e1c1c"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/idd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="40sp"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#1e1c1c"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignStart="@+id/ownername" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/ownername"
            android:layout_marginTop="29dp"
            android:background="@android:color/background_light"
            android:text="Owner's ID :"
            android:textColor="#1e1c1c"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="29dp"
            android:background="@android:color/background_light"
            android:text="Gender :"
            android:textColor="#1e1c1c" />

        <EditText
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignStart="@+id/idd"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#1e1c1c"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignTop="@+id/textView15"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#1e1c1c"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignStart="@+id/gender"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#1e1c1c"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>