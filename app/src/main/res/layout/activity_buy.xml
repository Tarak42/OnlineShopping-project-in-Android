<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BuyBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/two"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/back"
            android:layout_marginStart="15dp"
            android:text="Back"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/textView2"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/s0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/tuskys"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/s1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/pandas"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/s2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/carnival"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/s3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/country_grouceries"
                android:scaleType="fitXY" />


            <Button
                android:id="@+id/s4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/lees"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/lees" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="430dp"
            android:layout_marginTop="22dp"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/address0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/name4"
                android:layout_alignStart="@+id/name0"
                android:layout_below="@+id/name0"
                android:text="@android:string/unknownName"
                android:textColor="#1309ce" />

            <TextView
                android:id="@+id/name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Tuskys \nSupermarket"
                android:textColor="#00a703" />

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name1"
                android:text="Ramallah"
                android:textColor="#ce1309" />


            <TextView
                android:id="@+id/address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name2"
                android:layout_below="@+id/name2"
                android:text="Al-Teereh"
                android:textColor="#ce1309" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/address1"
                android:layout_below="@+id/address1"
                android:layout_marginTop="43dp"
                android:text="Carnival \nSupermarket"
                android:textColor="#00a703" />

            <TextView
                android:id="@+id/address3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/address2"
                android:layout_below="@+id/name3"
                android:text="@android:string/unknownName"
                android:textColor="#1309ce" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/address3"
                android:layout_below="@+id/address2"
                android:layout_marginTop="38dp"
                android:text="Country \nGroceries \nSupermarket"
                android:textColor="#00a703" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/address3"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:text="Lees \nSupermarket"
                android:textColor="#00a703" />

            <TextView
                android:id="@+id/address4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name4"
                android:layout_below="@+id/name4"
                android:text="Al-Irsal"
                android:textColor="#ce1309" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/address0"
                android:layout_below="@+id/address0"
                android:layout_marginTop="40dp"
                android:text="DR. Pandas \nSupermarket"
                android:textColor="#00a703" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>